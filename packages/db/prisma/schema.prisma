generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
enum tokenType {
  BTCUSDC
  SOLUSDC
  ETHUSDC
}
model User {
  id              String        @id @default(uuid())
  email           String        @unique
  lastLoggedIn    DateTime? 
  existingTrades  ExistingTrade[]
}

model Asset {
  id            String      @id @default(uuid())
  symbol        tokenType
  imageUrl      String?
  name          String
  decimals      Int
  existingTrades  ExistingTrade[]
}

model ExistingTrade {
  id                String      @id @default(uuid())
  openPrice         BigInt
  openPriceDecimal  Int         @default(2)
  closePrice        BigInt
  closePriceDecimal Int         @default(2)
  leverage          Int         @default(1)
  pnl               Int?
  asset             Asset       @relation(fields: [assetId], references: [id])
  assetId           String
  liquidated        Boolean
  user              User        @relation(fields: [userId], references: [id])
  userId            String
  createdAt         DateTime    @default(now())       
}
